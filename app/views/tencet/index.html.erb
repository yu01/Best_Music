<p id="notice"><%= notice %></p>

<!--<iframe width="560" height="315" src="http://www.youtube.com/embed/bmXumtgwtak?rel=0" frameborder="0" allowfullscreen></iframe>-->

  <h1> ADMIN </h1>

  <% if @countPosts != 0 %>
    <h2> Количество постов: <%= @countPosts %></h2>

    <h2> Количество постов за сегодня: <%= @countPostsDay %></h2>

  <% end %>

 <% @posts.each do |post| %>

    <% if !post.suit || getDate(post) != ""%>

    <table class="post">
      <tr> 
          <td colspan="3"><%= post.title %> </td>
          <td><%= getDate(post) %> </td>

          <%if post.isNew && post.created_at + 60 * 60 * 24 * 15 > Time.now %>
          <td>NEW </td>
          <% end %>
          
      </tr>

      <tr><td colspan="5"><iframe width="370" height="210" src= "<%= post.url %>"  frameborder="0" allowfullscreen></iframe></td> </tr>

     <tr> <td colspan="4"> <%= post.tags %> </td>

      <td><%= post.vote %> </td> </tr>


      <tr>
        
       
         <% if !post.suit %>
           <td> <%= link_to "OK", suit_post_path(post), method: :put %></td> 
         <% end %>

        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to "+Day", day_post_path(post), method: :put %></td> 
        <td><%= link_to "+New", toNew_post_path(post), method: :put %></td>
  
      </tr>

    </table>

  <% end %>

 <% end %>

