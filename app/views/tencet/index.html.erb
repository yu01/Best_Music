 <% @posts.each do |post| %>

    <% if !post.suit %>

    <table class="post">
      <tr> <td><%= post.title %> </td></tr>

      <tr><td><iframe width="370" height="210" src= "<%= post.url %>"  frameborder="0" allowfullscreen></iframe></td> </tr>

     <tr> <td> <%= post.tags %> </td>

      <td><%= post.vote %> </td> </tr>


      <tr>
        <td><%= link_to "OK", suit_post_path(post), method: :put %></td> 
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  
      </tr>

    </table>

  <% end %>

 <% end %>

